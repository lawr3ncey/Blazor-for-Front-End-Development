@inject RutinaService RutinaService
@page "/detalles-entrenamiento/{id:int}"

@code {
    [Parameter]
    public int Id { get; set; }

    private Rutinas rutina = new Rutinas();

    protected override void OnInitialized()
    {
        rutina = RutinaService.ObtenerRutina(Id);
    }
}

